<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanAssignment.HangmanGamePage"
             Title="MAUI Hangman Assignment">
    <VerticalStackLayout>
        <Label Text="Welcome to Hangman" HorizontalTextAlignment="Center" HorizontalOptions="Center" FontAttributes="Bold" FontSize="40"/>
        <Image Margin="40" Source="{Binding CurrentImage}" HorizontalOptions="Center"/>
        
        <Label FontAttributes="Bold" FontSize="30" HorizontalOptions="Center" Margin="40" Text="{Binding Spotlight}"/>

        <Entry x:Name="GuessBox" Placeholder="Enter Guess" HorizontalOptions="Center"/>

        <Button x:Name="Guess" Text="Guess" Clicked="Guess_Clicked" VerticalOptions="Center" Margin="0,100,0,0"/>

        <Button Text="Reset" Clicked="Reset_Clicked"
            HeightRequest ="100"
            WidthRequest ="300"/>

    </VerticalStackLayout>
</ContentPage>